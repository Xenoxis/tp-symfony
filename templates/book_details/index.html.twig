{% extends 'base.html.twig' %}

{% block title %}
    {% if book is not null %}
        Détails du livre {{book.title}}
    {% else %}
        Aucun livre sélectionné
    {% endif %}
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
    {%if book is not null %}

    <h1>Livre : "{{book.title}}"</h1>

    <table>
        <thead>
            <th>Info</th>
            <th>Valeur</th>
        </thead>
        <tbody>
            <tr>
                <td>Auteur</td>
                <td>{{book.author}}</td>
            </tr>
            <tr>
                <td>Date de publication</td>
                <td>{{book.publicationDate|date('d-m-Y')}}</td>
            </tr>
        </tbody>
    </table>

    <textarea readonly>
        {{ book.resume }}
    </textarea>

    {% else %}

    <h1> Aucun livre sélectionné ou non reconnu </h1>

    {% endif %}
</div>
{% endblock %}
